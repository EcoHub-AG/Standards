<?xml version="1.0" encoding="UTF-8"?><!--XSD Standard for IG B2B Data exchangeCopyright © IG B2B for Insurers + Brokers, Switzerland--><!--Changes in Version V5.4rc1 from V5.2: - Change version values and names of referenced data schemas from 5.2 to 5.4rc1- Change description of element name="mandeateSubmission"- Delete element name="contentRec"- Change value description of element name="typeRec" and change value from 016 to 006- Change type of element name="ICBusiness" to "ICBusinessLegalLocalityType"- Change type of element name="ICPrivatePerson" to "ICPrivatePersonLocalityType"- Change name of element name="mandateValid" to "mandateValidFromDate- Change name of element name="mandateFilingType" to name=type="mandateSubmissionType"- Insert new element name="mandateDetails"- Insert new element name="mandateCoverage"- Move element name="ICBusinessMandateSingle", "ICBusinessMandateGroup", "ICBusinessContractMain" and "ICBusinessContractSub" in complexType name="mandateCoverageType"- Move element name="ICPrivatePersonMandateSingle" and "ICPrivatePersonMandateFamily" in complexType name="mandateCoverageType"- Change name of element name="mandateScope" in "mandateSector" and change its description- Change name of element name="mandateScopeAllInsurances" in "mandateSectorAllInsurances"- Change name of element name="mandateScopeAllNoneLife" in "mandateSectorAllNoneLife"- Change name of element name="mandateScopeAllLife" in "mandateSectorAllLife"- Change name of element name="mandateScopeIndividual" in "mandateSectorIndividual"- Insert new element name="contract" and element name="contractNo"- Delete element name="docsViaBroker"- Delete element name="invoiceViaBroker"- Delete element name="docAdvertising"- Insert new element name="documentShipping" and suborder elements name="documentShippingBroker", "documentShippingCustomer" and "documentShippingExceptions"- Insert new elements name="documentShippingInvoice", name="documentShippingClaim" and name="documentShippingAdvertising" under element name="documentShippingExceptions"- Replace element name="adviser" with "contact"- Delete element name="orgUnitID"- Change element name="coBrokerAddress" to an optional field- Insert new element name="signedMandateAgreementDocument"- Change element name="attachment" to minOccurs="0" maxOccurs="unbounded"- Delete element name="remarks"- Delete french and italian textsChanges in Version V5.4.1 from V5.4rc1: - Change version values and names of referenced data schemas from 5.4rc1 to 5.4.1--><xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.IGB2B.ch/XMLSchema" targetNamespace="http://www.IGB2B.ch/XMLSchema" elementFormDefault="qualified" version="5.4.1">	<xs:include schemaLocation="globals_V5.4.1.xsd"/>	<xs:include schemaLocation="mandateTypeLib_V5.4.1.xsd"/>	<xs:element name="mandateSubmission">		<xs:annotation>			<xs:documentation xml:lang="de">Standard-Schema für die Mandatseinreichung</xs:documentation>			<xs:documentation xml:lang="de">Dieser Standard definiert die Struktur eines einzureichenden Mandats.</xs:documentation>			<xs:documentation xml:lang="en">Standard schema for mandate submission</xs:documentation>			<xs:documentation xml:lang="en">This standard defines the structure of a mandate submission.</xs:documentation>		</xs:annotation>		<xs:complexType>			<xs:sequence>				<xs:element name="header">					<xs:annotation>						<xs:documentation xml:lang="de">Header</xs:documentation>						<xs:documentation xml:lang="en">Header</xs:documentation>					</xs:annotation>					<xs:complexType>						<xs:complexContent>							<xs:extension base="headerType">								<xs:sequence>									<xs:element name="typeRec">										<xs:annotation>											<xs:documentation xml:lang="de">Recordart</xs:documentation>											<xs:documentation xml:lang="en">Record type</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="typeRecType">												<xs:enumeration value="006">													<xs:annotation>														<xs:documentation xml:lang="de">Mandat</xs:documentation>														<xs:documentation xml:lang="en">Mandate</xs:documentation>													</xs:annotation>												</xs:enumeration>											</xs:restriction>										</xs:simpleType>									</xs:element>									<xs:element name="subTypeRec">										<xs:annotation>											<xs:documentation xml:lang="de">Subrecordart</xs:documentation>											<xs:documentation xml:lang="en">Sub record type</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="subTypeRecType">												<xs:enumeration value="001">													<xs:annotation>														<xs:documentation xml:lang="de">Mandatseinreichung</xs:documentation>														<xs:documentation xml:lang="en">Mandate submission</xs:documentation>													</xs:annotation>												</xs:enumeration>											</xs:restriction>										</xs:simpleType>									</xs:element>									<xs:element name="versionRec">										<xs:annotation>											<xs:documentation xml:lang="de">Recordversion</xs:documentation>											<xs:documentation xml:lang="en">Record version</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="versionRecType">												<xs:enumeration value="5.4.1"/>											</xs:restriction>										</xs:simpleType>									</xs:element>								</xs:sequence>							</xs:extension>						</xs:complexContent>					</xs:complexType>				</xs:element>				<xs:choice>					<xs:annotation>						<xs:documentation xml:lang="de">Wahl zwischen einem Geschäfts- und Privatkunden</xs:documentation>						<xs:documentation xml:lang="en">Choice between business and private customer</xs:documentation>					</xs:annotation>					<xs:element name="ICBusiness" type="ICBusinessLegalLocalityType">						<xs:annotation>							<xs:documentation xml:lang="de">Geschäftskunde</xs:documentation>							<xs:documentation xml:lang="en">Business customer</xs:documentation>						</xs:annotation>					</xs:element>					<xs:element name="ICPrivatePerson" type="ICPrivatePersonLocalityType">						<xs:annotation>							<xs:documentation xml:lang="de">Privatkunde</xs:documentation>							<xs:documentation xml:lang="en">Private customer</xs:documentation>						</xs:annotation>					</xs:element>				</xs:choice>				<xs:element name="mandateSubmissionType" type="mandateSubmissionTypeLocType" minOccurs="1">					<xs:annotation>						<xs:documentation xml:lang="de">Art der Mandatseinreichung</xs:documentation>						<xs:documentation xml:lang="en">Type of mandate submission</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="mandateKind" type="mandateKindLocType">					<xs:annotation>						<xs:documentation xml:lang="de">Art des Brokermandats</xs:documentation>						<xs:documentation xml:lang="en">Type of broker mandate</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="mandateValidFromDate" type="xs:date">					<xs:annotation>						<xs:documentation xml:lang="de">Gültigkeitsbeginndatum des Mandats</xs:documentation>						<xs:documentation xml:lang="de">JJJJ-MM-TT = Beginndatum des Mandats bzw. der Mandatsanpassung.</xs:documentation>						<xs:documentation xml:lang="en">Validity of mandate</xs:documentation>						<xs:documentation xml:lang="en">YYYY-MM-DD = Start date of mandate or mandate adjustment.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="mandateDetails">					<xs:annotation>						<xs:documentation xml:lang="de">Detailangaben zum Mandat</xs:documentation>						<xs:documentation xml:lang="en">Details of the mandate</xs:documentation>					</xs:annotation>					<xs:complexType>						<xs:sequence>							<xs:element name="mandateCoverage" type="mandateCoverageType">								<xs:annotation>									<xs:documentation xml:lang="de">Abdeckung des Mandats</xs:documentation>									<xs:documentation xml:lang="en">Coverage of the mandate</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="mandateSector">								<xs:annotation>									<xs:documentation xml:lang="de">Branchen des Mandats</xs:documentation>									<xs:documentation xml:lang="en">Sectors of the mandate</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:choice>										<xs:element name="mandateSectorAllInsurances" type="setValueTrueType">											<xs:annotation>												<xs:documentation xml:lang="de">Mandatsumfang = gesamtes Kundenportefeuille</xs:documentation>												<xs:documentation xml:lang="en">Scope of mandate = total customer portfolio</xs:documentation>											</xs:annotation>										</xs:element>										<xs:element name="mandateSectorAllNoneLife" type="setValueTrueType">											<xs:annotation>												<xs:documentation xml:lang="de">Mandatsumfang = gesamter Bereich "Nichtleben"</xs:documentation>												<xs:documentation xml:lang="en">Scope of mandate = total area "non-life"</xs:documentation>											</xs:annotation>										</xs:element>										<xs:element name="mandateSectorAllLife" type="setValueTrueType">											<xs:annotation>												<xs:documentation xml:lang="de">Mandatsumfang = gesamter Bereich "Leben"</xs:documentation>												<xs:documentation xml:lang="en">Scope of mandate = total area "life"</xs:documentation>											</xs:annotation>										</xs:element>										<xs:element name="mandateSectorIndividual">											<xs:annotation>												<xs:documentation xml:lang="de">Mandatsumfang = nur einzelne Branchen/Bereiche gemäss Auswahl</xs:documentation>												<xs:documentation xml:lang="en">Scope of mandate = individual areas/branche only according to selection</xs:documentation>											</xs:annotation>											<xs:complexType>												<xs:sequence>													<xs:element name="lobIG" type="LOBIGType" maxOccurs="unbounded">														<xs:annotation>															<xs:documentation xml:lang="de">Branchencode IG B2B</xs:documentation>															<xs:documentation xml:lang="de">Branchencode gemäss IG B2B</xs:documentation>															<xs:documentation xml:lang="en">IG B2B sector code</xs:documentation>															<xs:documentation xml:lang="en">Sector code according to IG B2B</xs:documentation>														</xs:annotation>													</xs:element>												</xs:sequence>											</xs:complexType>										</xs:element>									</xs:choice>								</xs:complexType>							</xs:element>							<xs:element name="contracts" minOccurs="0">								<xs:annotation>									<xs:documentation xml:lang="de">Verträge</xs:documentation>									<xs:documentation xml:lang="en">Contracts</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:sequence>										<xs:element name="contractNo" type="contractNoType" maxOccurs="unbounded">											<xs:annotation>												<xs:documentation xml:lang="de">Vertragsnummer</xs:documentation>												<xs:documentation xml:lang="de">Entspricht der eindeutigen Nummer des entsprechenden Vertrages. Vertragsnummernaufbau des einzelnen Versicherers / Unternehmens siehe Spezifikation IG B2B.</xs:documentation>												<xs:documentation xml:lang="en">Contract number</xs:documentation>												<xs:documentation xml:lang="en">This is the unique number of the corresponding contract. For the contract number structure of the individual insurer/company, see IG B2B specification.</xs:documentation>											</xs:annotation>										</xs:element>									</xs:sequence>								</xs:complexType>							</xs:element>							<xs:element name="contractTermination" type="yesNoType">								<xs:annotation>									<xs:documentation xml:lang="de">Vertragskündigungsrecht</xs:documentation>									<xs:documentation xml:lang="de">Hinweis Broker: Für Mandat bei Personen-, Einzelleben- und Kollektiv-Verträgen kann dieses Recht nicht angewendet werden.</xs:documentation>									<xs:documentation xml:lang="en">Right to terminate agreement</xs:documentation>									<xs:documentation xml:lang="en">Note to broker: This right cannot be applied to a mandate for personal, individual and collective contracts.</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="contractConclusion" type="yesNoType">								<xs:annotation>									<xs:documentation xml:lang="de">Vertragsabschluss</xs:documentation>									<xs:documentation xml:lang="de">Hinweis Broker: Für Mandat bei Personen-, Einzelleben- und Kollektiv-Verträgen kann dieses Recht nicht angewendet werden.</xs:documentation>									<xs:documentation xml:lang="en">Conclusion of agreement</xs:documentation>									<xs:documentation xml:lang="en">Note to broker: This right cannot be applied to a mandate for personal, individual and collective contracts.</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="claimsAssistance" type="yesNoType">								<xs:annotation>									<xs:documentation xml:lang="de">Vertretung im Schadenfall</xs:documentation>									<xs:documentation xml:lang="en">Representation in the event of a claim</xs:documentation>								</xs:annotation>							</xs:element>							<xs:element name="claimsAddress" type="addressType" minOccurs="0">								<xs:annotation>									<xs:documentation xml:lang="de">Abweichende Schadenpostadresse</xs:documentation>									<xs:documentation xml:lang="en">Alternative postal address for claims</xs:documentation>								</xs:annotation>							</xs:element>							<xs:choice>								<xs:annotation>									<xs:documentation xml:lang="de">Angabe über das Vorhandensein eines coBrokers</xs:documentation>									<xs:documentation xml:lang="en">Information about the existence of a cobroker</xs:documentation>								</xs:annotation>								<xs:element name="coBroker">									<xs:annotation>										<xs:documentation xml:lang="de">Es existiert ein coBroker</xs:documentation>										<xs:documentation xml:lang="en">There is a coBroker</xs:documentation>									</xs:annotation>									<xs:complexType>										<xs:sequence>											<xs:element name="coBrokerName" type="coBrokerNameLocType">												<xs:annotation>													<xs:documentation xml:lang="de">Name / Vorname des coBrokers</xs:documentation>													<xs:documentation xml:lang="en">Surname / First name of coBroker</xs:documentation>												</xs:annotation>											</xs:element>											<xs:element name="coBrokerRegisterNo" type="regFINMANoType">												<xs:annotation>													<xs:documentation xml:lang="de">FINMA-Nummer des coBrokers</xs:documentation>													<xs:documentation xml:lang="en">FINMA registration number of coBroker</xs:documentation>												</xs:annotation>											</xs:element>											<xs:element name="coBrokerAddress" type="addressType" minOccurs="0">												<xs:annotation>													<xs:documentation xml:lang="de">Adresse des coBrokers</xs:documentation>													<xs:documentation xml:lang="en">Address of coBroker</xs:documentation>												</xs:annotation>											</xs:element>										</xs:sequence>									</xs:complexType>								</xs:element>								<xs:element name="coBrokerNotExist" type="setValueTrueType">									<xs:annotation>										<xs:documentation xml:lang="de">Es existiert kein coBroker</xs:documentation>										<xs:documentation xml:lang="en">There is no coBroker</xs:documentation>									</xs:annotation>								</xs:element>							</xs:choice>							<xs:element name="documentShipping">								<xs:annotation>									<xs:documentation xml:lang="de">Dokumentenversand</xs:documentation>									<xs:documentation xml:lang="en">Document shipping</xs:documentation>								</xs:annotation>								<xs:complexType>									<xs:sequence>										<xs:element name="documentShippingBroker" type="yesNoType">											<xs:annotation>												<xs:documentation xml:lang="de">Versand aller Dokumente an den Broker</xs:documentation>												<xs:documentation xml:lang="en">Shipping of all documents to the broker</xs:documentation>											</xs:annotation>										</xs:element>										<xs:element name="documentShippingCustomer" type="yesNoType">											<xs:annotation>												<xs:documentation xml:lang="de">Versand aller Dokumente an den Kunden</xs:documentation>												<xs:documentation xml:lang="en">Shipping of all documents to the customer</xs:documentation>											</xs:annotation>										</xs:element>										<xs:element name="documentShippingExceptions">											<xs:annotation>												<xs:documentation xml:lang="de">Dokumentenversand Ausnahmeregelungen</xs:documentation>												<xs:documentation xml:lang="en">Document shipping exception clauses</xs:documentation>											</xs:annotation>											<xs:complexType>												<xs:sequence>													<xs:element name="documentShippingInvoice" type="shippingMethodLocType">														<xs:annotation>															<xs:documentation xml:lang="de">Versand von Rechnungsdokumenten</xs:documentation>															<xs:documentation xml:lang="en">Shipping of invoice documents</xs:documentation>														</xs:annotation>													</xs:element>													<xs:element name="documentShippingClaim" type="shippingMethodLocType">														<xs:annotation>															<xs:documentation xml:lang="de">Versand von Schadendokumenten</xs:documentation>															<xs:documentation xml:lang="en">Shipping of claims documents</xs:documentation>														</xs:annotation>													</xs:element>													<xs:element name="documentShippingAdvertising" type="shippingMethodLocType">														<xs:annotation>															<xs:documentation xml:lang="de">Versand von Promotions- und Werbedokumenten</xs:documentation>															<xs:documentation xml:lang="en">Shipping of promotional and advertising documents</xs:documentation>														</xs:annotation>													</xs:element>												</xs:sequence>											</xs:complexType>										</xs:element>									</xs:sequence>								</xs:complexType>							</xs:element>						</xs:sequence>					</xs:complexType>				</xs:element>				<xs:element name="contact" type="contactType">					<xs:annotation>						<xs:documentation xml:lang="de">Angaben zur Kontaktstelle</xs:documentation>						<xs:documentation xml:lang="en">Contact point details</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="signedMandateAgreementDocument" type="digitalDocumentType" maxOccurs="unbounded">					<xs:annotation>						<xs:documentation xml:lang="de">Unterzeichnetes Mandatsvereinbarungsdokument</xs:documentation>						<xs:documentation xml:lang="de">Dies beinhaltet die vom Versicherungsnehmer und Broker unterzeichnete Mandatsvereinbarung.</xs:documentation>						<xs:documentation xml:lang="en">Signed mandate agreement document</xs:documentation>						<xs:documentation xml:lang="en">This includes the mandate agreement signed by the policyholder and broker.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="attachment" type="attachmentType" minOccurs="0" maxOccurs="unbounded">					<xs:annotation>						<xs:documentation xml:lang="de">Dateianhang</xs:documentation>						<xs:documentation xml:lang="en">Attachment</xs:documentation>					</xs:annotation>				</xs:element>			</xs:sequence>		</xs:complexType>	</xs:element></xs:schema>