<?xml version="1.0" encoding="UTF-8"?><!--XSD Standard for IG B2B Data exchangeCopyright © IG B2B for Insurers + Brokers, Switzerland--><!--Changes in Version V5.4 from V5.2: - Change version values and name of referenced data schema from 5.2 to 5.4- Delete element name="generalAgreement"- Change name of simpleType name="generalAgreementLocType" to "frameworkContractNoLocType"- Change description of element name="lobIG"- Change description of element name="lobINS"- Delete element name="currency"- Change name of element name="datePeriodPremFrom" to "premiumPeriodFromDate" and its description- Change name of element name="datePeriodPremTo" to "premiumPeriodToDate" and its description- Change description of value 00 and delete values 71-76 in simpleType name="typeCommLocType"- Delete complexType name="ICBusinessLocType"- Delete complexType name="ICPrivatePersonLocType"- Change name of element name="amountComm" to "commissionAmount"- Delete french and italian textsChanges in Version V5.4.1 from V5.4: - Change version values and name of referenced data schema from 5.4 to 5.4.1--><xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.IGB2B.ch/XMLSchema" targetNamespace="http://www.IGB2B.ch/XMLSchema" elementFormDefault="qualified" version="5.4.1">	<xs:include schemaLocation="globals_V5.4.1.xsd"/>	<xs:simpleType name="brokerCodeInsLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für Brokercode Versicherer</xs:documentation>			<xs:documentation xml:lang="en">Data type for insurer's broker code</xs:documentation>		</xs:annotation>		<xs:restriction base="textLine">			<xs:maxLength value="10"/>		</xs:restriction>	</xs:simpleType>	<xs:simpleType name="agencyLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für Agentur/Verkaufsstelle/Provisionsbezüger</xs:documentation>			<xs:documentation xml:lang="en">Data type for agency/sales point/commission agent</xs:documentation>		</xs:annotation>		<xs:restriction base="textLine">			<xs:maxLength value="20"/>		</xs:restriction>	</xs:simpleType>	<xs:simpleType name="noInvoiceLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für Rechnungsnummer</xs:documentation>			<xs:documentation xml:lang="en">Data type for invoice numer</xs:documentation>		</xs:annotation>		<xs:restriction base="textLine">			<xs:maxLength value="20"/>		</xs:restriction>	</xs:simpleType>	<xs:simpleType name="typeAccountSettlementLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für Abrechnungsart</xs:documentation>			<xs:documentation xml:lang="en">Data type for invoice form</xs:documentation>		</xs:annotation>		<xs:restriction base="xs:NMTOKEN">			<xs:maxLength value="2"/>			<xs:enumeration value="01">				<xs:annotation>					<xs:documentation xml:lang="de">Neugeschäft</xs:documentation>					<xs:documentation xml:lang="en">New business</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="02">				<xs:annotation>					<xs:documentation xml:lang="de">Abgang/Storno</xs:documentation>					<xs:documentation xml:lang="en">Exit/cancellation</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="03">				<xs:annotation>					<xs:documentation xml:lang="de">Technische Mutation</xs:documentation>					<xs:documentation xml:lang="en">Technical change</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="04">				<xs:annotation>					<xs:documentation xml:lang="de">übrige</xs:documentation>					<xs:documentation xml:lang="en">Other</xs:documentation>				</xs:annotation>			</xs:enumeration>		</xs:restriction>	</xs:simpleType>	<xs:simpleType name="typeCommLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für die Art der Brokerprovision</xs:documentation>			<xs:documentation xml:lang="en">Data type for the type of broker commission</xs:documentation>		</xs:annotation>		<xs:restriction base="xs:NMTOKEN">			<xs:maxLength value="2"/>			<xs:enumeration value="00">				<xs:annotation>					<xs:documentation xml:lang="de">Mehrere, unterschiedliche Provisionsarten</xs:documentation>					<xs:documentation xml:lang="en">Multiple commission forms(Code for type line 1)</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="01">				<xs:annotation>					<xs:documentation xml:lang="de">Courtage/Betreuungsprovision</xs:documentation>					<xs:documentation xml:lang="en">Brokerage/advisory commission</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="02">				<xs:annotation>					<xs:documentation xml:lang="de">Einmalige Abschlussprovision</xs:documentation>					<xs:documentation xml:lang="en">Single transaction commission</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="03">				<xs:annotation>					<xs:documentation xml:lang="de">Laufende Abschlussprovision</xs:documentation>					<xs:documentation xml:lang="en">Current transaction commission</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="04">				<xs:annotation>					<xs:documentation xml:lang="de">Pauschalprovision (fixer Betrag)</xs:documentation>					<xs:documentation xml:lang="en">Fixed commission</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="05">				<xs:annotation>					<xs:documentation xml:lang="de">Superprovision</xs:documentation>					<xs:documentation xml:lang="en">Super commission</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="06">				<xs:annotation>					<xs:documentation xml:lang="de">Akontocourtage/Akontoprovision</xs:documentation>					<xs:documentation xml:lang="en">Brokerage fee/commission on account</xs:documentation>				</xs:annotation>			</xs:enumeration>			<xs:enumeration value="09">				<xs:annotation>					<xs:documentation xml:lang="de">übrige Provisionsarten</xs:documentation>					<xs:documentation xml:lang="en">Other forms of commission</xs:documentation>				</xs:annotation>			</xs:enumeration>		</xs:restriction>	</xs:simpleType>	<xs:simpleType name="frameworkContractNoLocType">		<xs:annotation>			<xs:documentation xml:lang="de">Datentyp für Rahmenvertrags-/Flottenvertragsnummer</xs:documentation>			<xs:documentation xml:lang="en">Data type for framework contract/fleet contract number</xs:documentation>		</xs:annotation>		<xs:restriction base="textLine">			<xs:maxLength value="20"/>		</xs:restriction>	</xs:simpleType>	<xs:complexType name="commStatementTotalType">		<xs:annotation>			<xs:documentation xml:lang="de">Abrechnung der Brokerprovision als Total</xs:documentation>			<xs:documentation xml:lang="en">Statement of broker commission as total</xs:documentation>		</xs:annotation>		<xs:sequence>			<xs:element name="premiumPeriodFromDate" type="xs:date">				<xs:annotation>					<xs:documentation xml:lang="de">Prämienperiode von Datum</xs:documentation>					<xs:documentation xml:lang="de">Das Prämienperiode von Datum (JJJJ-MM-TT) entspricht dem Beginndatum der Prämienperiode, für welche eine Rechnung gestellt oder eine Provision gutgeschrieben bzw. belastet wird. Bei Teilprämien ist jeweils auch nur diese Teilperiode auszuweisen. Die Prämienperiode kann auch Zeiträume aus Vor- oder Folgemonaten beinhalten. Im Falle einer Provisionsabrechnung ist die Bedingung, dass das Prämienperiode von Datum vor oder in der Abrechnungsperiode dieses Datenfiles liegt, ansonsten deutet dies auf eine Inkonsistenz hin (Provisionen werden i.d.R. nicht vor Vertragsdauerbeginn bezahlt). Bei nicht prämienperiodebezogenen Provisionen (z.B. einmalige Geschenkprämien) ist das Versicherungsbeginn Datum des Vertrages hier einzufügen.</xs:documentation>					<xs:documentation xml:lang="en">Premium period from date</xs:documentation>					<xs:documentation xml:lang="en">The premium period from date (YYYY-MM-DD) corresponds to the start date of the premium period for which an invoice is issued or a commission is credited or debited. In the case of partial premiums, only this partial period is to be shown. The premium period may also include periods from previous or subsequent months. In the case of a commission calculation, the premium period from date must fall before or during the billing period for this data file, or else an inconsistency will be indicated (commissions are generally not paid before the start of the contract period). For commissions not related to premium periods (e.g. one-off gift premiums), the insurance start date of the contract must be inserted here.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="premiumPeriodToDate" type="xs:date">				<xs:annotation>					<xs:documentation xml:lang="de">Prämienperiode bis Datum</xs:documentation>					<xs:documentation xml:lang="de">Das Prämienperiode bis Datum (JJJJ-MM-TT) entspricht dem Enddatum der Prämienperiode, für welche eine Rechnung gestellt oder Provision gutgeschrieben bzw. belastet wird. Bei Teilprämien ist jeweils auch nur diese Teilperiode auszuweisen. Die Prämienperiode kann auch Zeiträume aus Vor- oder Folgemonaten beinhalten. Bei nicht prämienperiodebezogenen Provisionen (z.B. einmalige Geschenkprämien) ist das Versicherungsende Datum des Vertrages hier einzufügen.</xs:documentation>					<xs:documentation xml:lang="en">Premium period to date</xs:documentation>					<xs:documentation xml:lang="en">The premium period to date (YYYY-MM-DD) corresponds to the end date of the premium period for which an invoice is issued or a commission is credited or debited. In the case of partial premiums, only this partial period is to be shown. The premium period may also include periods from previous or subsequent months. For commissions not related to premium periods (e.g. one-off gift premiums), the insurance end date of the contract must be inserted here.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="typeAccountSettlement" type="typeAccountSettlementLocType" minOccurs="0">				<xs:annotation>					<xs:documentation xml:lang="de">Abrechnungsart</xs:documentation>					<xs:documentation xml:lang="de">Bemerkung für Versicherer: Die jährliche Folgecourtagen wird unter Code 04 abgerechnet. Für das Einzellebengeschäft sind die Datenfelder ‚Prämie von‘ und ‚Prämie bis‘  nicht relevant. Der Provisionsrecord soll deshalb die Angaben gemäss Datenfelder "Abrechnungsart" und "Zahlungsart und Rate" enthalten.</xs:documentation>					<xs:documentation xml:lang="en">Invoice form</xs:documentation>					<xs:documentation xml:lang="en">Remark for insurer: The annual brokerage fees are invoiced under code 04. The data fields ‚Premium from‘ and ‚Premium until‘ are not relevant for the single premium business. The provisioning record should therefore contain the information according to the data fields "invoice type" and "payment type and rate".</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="typePayInstalment" type="periodicityType" minOccurs="0">				<xs:annotation>					<xs:documentation xml:lang="de">Zahlungsart und Rate</xs:documentation>					<xs:documentation xml:lang="en">Manner of payment and rate</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="lobIG" type="LOBIGType">				<xs:annotation>					<xs:documentation xml:lang="de">Branchencode IG B2B</xs:documentation>					<xs:documentation xml:lang="de">Branchencode gemäss IG B2B</xs:documentation>					<xs:documentation xml:lang="en">IG B2B sector code</xs:documentation>					<xs:documentation xml:lang="en">Sector code according to IG B2B</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="lobINS" type="LOBINSType" minOccurs="0">				<xs:annotation>					<xs:documentation xml:lang="de">Branchen-/Risikocode oder -bezeichnung des Versicherers/Vorsorgeunternehmens</xs:documentation>					<xs:documentation xml:lang="de">Branchen-/Risikocode oder -bezeichnung gemäss Verzeichnis des einzelnen Versicherers/Vorsorgeunternehmens. Der Detaillierungsgrad sollte so gewählt sein, dass für vor- und nachgelagerte Prozesse ein Bezug zu den jeweiligen Positionen (z.B. Branchencode in Prämienrechnung = Branchencode in Provisionsabrechnung) hergestellt werden kann. Bei kombinierten Produkten ist der übergeordnete Code/Bezeichnung zu wählen.</xs:documentation>					<xs:documentation xml:lang="en">Sector/risk code or designation of the insurer/pension company</xs:documentation>					<xs:documentation xml:lang="en">Sector/risk code or designation according to the directory of the individual insurer/pension company. The level of detail should be sufficient to enable upstream and downstream processes to establish a reference to the respective items (e.g. sector code in premium invoice = sector code in commission calculation). For combined products, the higher-level code/designation is to be selected.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="currency" type="currencyCodeType">				<xs:annotation>					<xs:documentation xml:lang="de">Währung</xs:documentation>					<xs:documentation xml:lang="de">Code gemäss ISO-Code. Ohne Angabe der Währung gilt immer die Referenzwährung, d.h. zur Zeit der Schweizer Franken (CHF).</xs:documentation>					<xs:documentation xml:lang="en">Currency</xs:documentation>					<xs:documentation xml:lang="en">Code according to ISO-Code. Without specifying the currency, the reference currency always applies, at the time Swiss Francs (CHF).</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="premiumComm" type="decimal10dot2Type">				<xs:annotation>					<xs:documentation xml:lang="de">Provisionsberechnungsbasis</xs:documentation>					<xs:documentation xml:lang="de">Provisionsberechtigte Prämie, Produktionssumme (Einzellebensgeschäft) oder Risikokostenprämie, Deckungskapital (Kollektivleben) gemäss Definition des Versicherers. Der Betrag ist im Normalfall positiv.</xs:documentation>					<xs:documentation xml:lang="en">Basis on which premium calculated</xs:documentation>					<xs:documentation xml:lang="en">Provisioning-eligible premium, production total (single premium business) or risk-cost premium, actuarial reserve (collective level) according to the insurer’s definition. The amount is normally positive.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="typeComm" type="typeCommLocType">				<xs:annotation>					<xs:documentation xml:lang="de">Art der Brokerprovision</xs:documentation>					<xs:documentation xml:lang="de">Hinweis Broker und Maklersoftware: Für die Mobiliar Versicherung (MobiLife) wurden zusätzlich auch folgende Codes zugelassen (siehe Werteliste)</xs:documentation>					<xs:documentation xml:lang="en">Form of broker commission</xs:documentation>					<xs:documentation xml:lang="en">Note broker and brokersoftware: For the insurer Mobiliar (MobiLife) the following codes were additionally approved (see list of values).</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="commissionRate" type="decimal3dot3Type" minOccurs="0">				<xs:annotation>					<xs:documentation xml:lang="de">Provisionssatz in %</xs:documentation>					<xs:documentation xml:lang="de">Immer Angabe in % im Format xxx.yyy / Hinweis Versicherer: z.B. Ein Provisionssatz von 0.5‰ wird mit 0.05% angezeigt.</xs:documentation>					<xs:documentation xml:lang="en">Commission rate in %</xs:documentation>					<xs:documentation xml:lang="en">Always in % in the format xxx.yyy / Note Insurer: e.g. Commission rate of 0.5‰ is shown as 0.05%.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="commissionFactor" type="decimal3dot3Type" minOccurs="0">				<xs:annotation>					<xs:documentation xml:lang="de">Provisionsfaktor</xs:documentation>					<xs:documentation xml:lang="de">Faktor für die Auf- oder Abwertung des Basisprovisionssatzes.</xs:documentation>					<xs:documentation xml:lang="en">Commission factor</xs:documentation>					<xs:documentation xml:lang="en">Factor for the increase or decrease in the basic provisioning rate.</xs:documentation>				</xs:annotation>			</xs:element>			<xs:element name="commissionAmount" type="decimal10dot2Type">				<xs:annotation>					<xs:documentation xml:lang="de">Brokerprovision</xs:documentation>					<xs:documentation xml:lang="de">Der Betrag ist im Normalfall positiv.</xs:documentation>					<xs:documentation xml:lang="en">Broker commission</xs:documentation>					<xs:documentation xml:lang="en">The amount is normally positive.</xs:documentation>				</xs:annotation>			</xs:element>		</xs:sequence>	</xs:complexType></xs:schema>