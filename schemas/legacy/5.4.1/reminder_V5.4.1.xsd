<?xml version="1.0" encoding="UTF-8"?><!--XSD Standard for IG B2B Data exchangeCopyright © IG B2B for Insurers + Brokers, Switzerland--><!--Changes in Version V5.4rc1 from V5.2: - Change version values and names of referenced data schemas from 5.2 to 5.4rc1- Change name of element name="premiumReminder" to "reminder" and its description- Delete element name="contentRec"- Change value description of element name="typeRec" and change value from 002 to 001- Change value description of element name="subTypeRec" and change value from 000 to 002- Change type of element name="ICBusiness" to "ICBusinessType"- Change type of element name="ICPrivatePerson" to "ICPrivatePersonType"- Change description of element name="contractNo"- Insert new element name="frameworkContractNo"- Change description of element name="lobIG"- Change description of element name="lobINS"- Change description of element name="invoiceNo"- Change element name="currency" to a mandatory field- Change name of element name="amountInvoice" to name="invoiceAmount" and its description- Change name of element name="amountCharges" to "reminderFee" and its description- Insert new element name="outstandingInvoiceAmount"- Insert new element name="premiumComm"- Change name of element name="mailing" to "shippingMethod" and its description- Change description of element name="interruptionDate"- Insert new element name="reminderDocument"- Change element name="attachment" to minOccurs="0" maxOccurs="unbounded"- Delete element name="remarks"- Delete french and italian textsChanges in Version V5.4 from V5.4rc1: - Change version values and names of referenced data schemas from 5.4rc1 to 5.4Changes in Version V5.4.1 from V5.4: - Change version values and names of referenced data schemas from 5.4 to 5.4.1--><xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.IGB2B.ch/XMLSchema" targetNamespace="http://www.IGB2B.ch/XMLSchema" elementFormDefault="qualified" version="5.4.1">	<xs:include schemaLocation="globals_V5.4.1.xsd"/>	<xs:include schemaLocation="billingTypeLib_V5.4.1.xsd"/>	<xs:element name="reminder">		<xs:annotation>			<xs:documentation xml:lang="de">Standard-Schema für Mahnungen</xs:documentation>			<xs:documentation xml:lang="de">Im Rahmen dieses Standards sind die gesetzlich zwingenden Mahnungen (z.B. VVG) und alle leistungseinschränkenden Mahnungen (z.B. Ruhen der Leistungspflicht oder Deckungsreduktion) zu übermitteln.</xs:documentation>			<xs:documentation xml:lang="en">Standard schema for reminders</xs:documentation>			<xs:documentation xml:lang="en">Legally mandatory reminders (e.g. IPA reminders) and all benefit-restricting reminders (e.g. suspension of the obligation to pay benefits or reduction of cover) are to be transmitted within the framework of this standard.</xs:documentation>		</xs:annotation>		<xs:complexType>			<xs:sequence>				<xs:element name="header">					<xs:annotation>						<xs:documentation xml:lang="de">Header</xs:documentation>						<xs:documentation xml:lang="en">Header</xs:documentation>					</xs:annotation>					<xs:complexType>						<xs:complexContent>							<xs:extension base="headerType">								<xs:sequence>									<xs:element name="typeRec">										<xs:annotation>											<xs:documentation xml:lang="de">Recordart</xs:documentation>											<xs:documentation xml:lang="en">Record type</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="typeRecType">												<xs:enumeration value="001">													<xs:annotation>														<xs:documentation xml:lang="de">Rechnungen</xs:documentation>														<xs:documentation xml:lang="en">Invoices</xs:documentation>													</xs:annotation>												</xs:enumeration>											</xs:restriction>										</xs:simpleType>									</xs:element>									<xs:element name="subTypeRec">										<xs:annotation>											<xs:documentation xml:lang="de">Subrecordart</xs:documentation>											<xs:documentation xml:lang="en">Sub-record type</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="subTypeRecType">												<xs:enumeration value="002">													<xs:annotation>														<xs:documentation xml:lang="de">Mahnung</xs:documentation>														<xs:documentation xml:lang="en">Reminder</xs:documentation>													</xs:annotation>												</xs:enumeration>											</xs:restriction>										</xs:simpleType>									</xs:element>									<xs:element name="versionRec">										<xs:annotation>											<xs:documentation xml:lang="de">Recordversion</xs:documentation>											<xs:documentation xml:lang="en">Record version</xs:documentation>										</xs:annotation>										<xs:simpleType>											<xs:restriction base="versionRecType">												<xs:enumeration value="5.4.1"/>											</xs:restriction>										</xs:simpleType>									</xs:element>								</xs:sequence>							</xs:extension>						</xs:complexContent>					</xs:complexType>				</xs:element>				<xs:choice>					<xs:annotation>						<xs:documentation xml:lang="de">Wahl zwischen einem Geschäfts- und Privatkunden</xs:documentation>						<xs:documentation xml:lang="en">Choice between business and private customer</xs:documentation>					</xs:annotation>					<xs:element name="ICBusiness" type="ICBusinessType">						<xs:annotation>							<xs:documentation xml:lang="de">Geschäftskunde</xs:documentation>							<xs:documentation xml:lang="en">Business customer</xs:documentation>						</xs:annotation>					</xs:element>					<xs:element name="ICPrivatePerson" type="ICPrivatePersonType">						<xs:annotation>							<xs:documentation xml:lang="de">Privatkunde</xs:documentation>							<xs:documentation xml:lang="en">Private customer</xs:documentation>						</xs:annotation>					</xs:element>				</xs:choice>				<xs:element name="contractNo" type="contractNoType">					<xs:annotation>						<xs:documentation xml:lang="de">Vertragsnummer</xs:documentation>						<xs:documentation xml:lang="de">Entspricht der eindeutigen Nummer des entsprechenden Vertrages. Vertragsnummernaufbau des einzelnen Versicherers/Unternehmens siehe Spezifikation IG B2B.</xs:documentation>						<xs:documentation xml:lang="en">Contract number</xs:documentation>						<xs:documentation xml:lang="en">This is the unique number of the corresponding contract. For the contract number structure of the individual insurer/company, see IG B2B specification.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="frameworkContractNo" type="frameworkContractNoLocType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Rahmenvertrags-/Flottenvertragsnummer</xs:documentation>						<xs:documentation xml:lang="de">Die Rahmenvertrags-/Flottenvertragsnummer ist im Falle eines vorhandenen, zugehörigen Rahmen- oder Flottenvertrags hier einzufügen.</xs:documentation>						<xs:documentation xml:lang="en">Framework contract/fleet contract number</xs:documentation>						<xs:documentation xml:lang="en">The framework contract/fleet contract number is to be inserted here in the case of an existing, associated framework or fleet contract.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="brokerCodeIns" type="brokerCodeInsLocType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Brokercode Versicherer</xs:documentation>						<xs:documentation xml:lang="de">Broker-Nummer gemäss dem Codeverzeichnis des einzelnen Versicherers.</xs:documentation>						<xs:documentation xml:lang="en">Insurer's broker code</xs:documentation>						<xs:documentation xml:lang="en">Broker number according to the individual insurer's code directory</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="agency" type="agencyLocType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Agentur/Verkaufsstelle/Provisionsbezüger</xs:documentation>						<xs:documentation xml:lang="de">Agentur-, Verkaufsstellen- oder Provisionsbezüger-Nummer gemäss Codeverzeichnis des einzelnen Versicherers.</xs:documentation>						<xs:documentation xml:lang="en">Agency/sales point/commission agent</xs:documentation>						<xs:documentation xml:lang="en">Agency, sales point or commission agent number according to the individual insurer's code directory.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="invoiceNo" type="noInvoiceLocType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Rechnungsnummer</xs:documentation>						<xs:documentation xml:lang="de">Die Rechnungsnummer ist das eindeutige Identifikationsmerkmal einer Rechnung (z.B. Prämienrechnung).</xs:documentation>						<xs:documentation xml:lang="en">Invoice number</xs:documentation>						<xs:documentation xml:lang="en">The invoice number is the unique identifier of an invoice (e.g. premium invoice).</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="invoiceDate" type="xs:date" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Rechnungserstellungsdatum</xs:documentation>						<xs:documentation xml:lang="de">JJJJ-MM-TT = Datum der Rechnungserstellung.</xs:documentation>						<xs:documentation xml:lang="en">Invoice creation date</xs:documentation>						<xs:documentation xml:lang="en">YYYY-MM-DD = Date of invoice creation.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="shippingMethod" type="shippingMethodLocType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Versandart</xs:documentation>						<xs:documentation xml:lang="en">Shipping method</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="lobIG" type="LOBIGType">					<xs:annotation>						<xs:documentation xml:lang="de">Branchencode IG B2B</xs:documentation>						<xs:documentation xml:lang="de">Branchencode gemäss IG B2B</xs:documentation>						<xs:documentation xml:lang="en">IG B2B sector code</xs:documentation>						<xs:documentation xml:lang="en">Sector code according to IG B2B</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="lobINS" type="LOBINSType" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Branchen-/Risikocode oder -bezeichnung des Versicherers/Vorsorgeunternehmens</xs:documentation>						<xs:documentation xml:lang="de">Branchen-/Risikocode oder -bezeichnung gemäss Verzeichnis des einzelnen Versicherers/Vorsorgeunternehmens. Der Detaillierungsgrad sollte so gewählt sein, dass für vor- und nachgelagerte Prozesse ein Bezug zu den jeweiligen Positionen (z.B. Branchencode in Prämienrechnung = Branchencode in Provisionsabrechnung) hergestellt werden kann. Bei kombinierten Produkten ist der übergeordnete Code/Bezeichnung zu wählen.</xs:documentation>						<xs:documentation xml:lang="en">Sector/risk code or designation of the insurer/pension company</xs:documentation>						<xs:documentation xml:lang="en">Sector/risk code or designation according to the directory of the individual insurer/pension company. The level of detail should be sufficient to enable upstream and downstream processes to establish a reference to the respective items (e.g. sector code in premium invoice = sector code in commission calculation). For combined products, the higher-level code/designation is to be selected.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="currency" type="currencyCodeType">					<xs:annotation>						<xs:documentation xml:lang="de">Währung</xs:documentation>						<xs:documentation xml:lang="de">Code gemäss ISO-Code. Ohne Angabe der Währung gilt immer die Referenzwährung, d.h. zur Zeit der Schweizer Franken (CHF).</xs:documentation>						<xs:documentation xml:lang="en">Currency</xs:documentation>						<xs:documentation xml:lang="en">Code according to ISO code. Without specifying the currency, the reference currency always applies, at the time Swiss francs (CHF).</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="invoiceAmount" type="decimal10dot2Type">					<xs:annotation>						<xs:documentation xml:lang="de">Rechnungsbetrag</xs:documentation>						<xs:documentation xml:lang="de">Der in Rechnung gestellte Betrag. Entspricht bei Prämienrechnungen der fakturierten Prämie = Tarifprämie + Ratenzuschläge + Steuern und gesetzl.Abgaben, ohne Überschussbeteiligungen. Der Betrag ist im Normalfall positiv.</xs:documentation>						<xs:documentation xml:lang="en">Invoice amount</xs:documentation>						<xs:documentation xml:lang="en">The amount invoiced. For premium invoices, this is the invoiced premium = tariff premium + instalment surcharges + taxes and statutory charges, excluding surplus sharing. The amount is positive in most cases.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="reminderFee" type="decimal5dot2Type" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Mahngebühr</xs:documentation>						<xs:documentation xml:lang="de">Administrative Gebühr, welche für eine Mahnung belastet werden.</xs:documentation>						<xs:documentation xml:lang="en">Reminder fee</xs:documentation>						<xs:documentation xml:lang="en">Administrative fee charged for a reminder.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="outstandingInvoiceAmount" type="decimal10dot2Type" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Offener Rechnungsbetrag</xs:documentation>						<xs:documentation xml:lang="de">Der noch offene Rechnungsbetrag der Originalrechnung, im Falle von bereits erfolgten Teilzahlungen.</xs:documentation>						<xs:documentation xml:lang="en">Outstanding invoice amount</xs:documentation>						<xs:documentation xml:lang="en">The outstanding invoice amount from the original invoice, in the case of partial payments already made.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="premiumComm" type="decimal10dot2Type" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Provisionsberechnungsbasis</xs:documentation>						<xs:documentation xml:lang="de">Provisionsberechtigte Prämie, Produktionssumme (Einzellebensgeschäft) oder Risikokostenprämie, Deckungskapital (Kollektivleben) gemäss Definition des Versicherers. Der Betrag ist im Normalfall positiv.</xs:documentation>						<xs:documentation xml:lang="en">Basis on which premium calculated</xs:documentation>						<xs:documentation xml:lang="en">Provisioning-eligible premium, production total (single premium business) or risk-cost premium, actuarial reserve (collective level) according to the insurer’s definition. The amount is normally positive.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="demandDate" type="xs:date">					<xs:annotation>						<xs:documentation xml:lang="de">Versanddatum der Mahnung</xs:documentation>						<xs:documentation xml:lang="de">JJJJ-MM-TT = Datum des Mahnungsversandes</xs:documentation>						<xs:documentation xml:lang="en">Dispatch date of the reminder</xs:documentation>						<xs:documentation xml:lang="en">YYYY-MM-DD = Date of dispatch of the reminder</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="interruptionDate" type="xs:date" minOccurs="0">					<xs:annotation>						<xs:documentation xml:lang="de">Datum Deckungsunterbruch</xs:documentation>						<xs:documentation xml:lang="de">Im Falle eines Deckungsunterbruchs ist das Beginndatum des Deckungsunterbruches bzw. der Deckungsänderung in JJJJ-MM-TT anzugeben.</xs:documentation>						<xs:documentation xml:lang="en">Date of interruption of cover</xs:documentation>						<xs:documentation xml:lang="en">In the case of an interruption of cover, the start date of the interruption or change of cover must be indicated in YYYY-MM-DD format.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="reminderDocument" type="attachmentType" maxOccurs="unbounded">					<xs:annotation>						<xs:documentation xml:lang="de">Mahnungsdokument</xs:documentation>						<xs:documentation xml:lang="de">Dies beinhaltet eine digitale Kopie des originalen Mahnungsdokuments.</xs:documentation>						<xs:documentation xml:lang="en">Reminder document</xs:documentation>						<xs:documentation xml:lang="en">This includes a digital copy of the original reminder document.</xs:documentation>					</xs:annotation>				</xs:element>				<xs:element name="attachment" type="attachmentType" minOccurs="0" maxOccurs="unbounded">					<xs:annotation>						<xs:documentation xml:lang="de">Dateianhang</xs:documentation>						<xs:documentation xml:lang="en">Attachment</xs:documentation>					</xs:annotation>				</xs:element>			</xs:sequence>		</xs:complexType>	</xs:element></xs:schema>