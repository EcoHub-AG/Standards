{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"description": "Standard header information",
	"type": "object",
	"properties": {
		"recipient": {
			"$ref": "SenderReceiverType.json"
		},
		"sender": {
			"$ref": "SenderReceiverType.json"
		},
		"schemaUrl": {
			"type": "string",
			"description": "URL to the schema this json document adheres to. The URL must point to the respective schema in the EcoHub GitHub repository.",
			"minLength": 1,
			"format": "uri-reference",
			"examples": [
				"https://raw.githubusercontent.com/EcoHub-AG/Standards/refs/tags/offer-nlpi-v0.5.0/schemas/Offer-NLPI/v0.5.0/offer-nlpi-root/OfferNlpiRequestDataType.json",
				"https://raw.githubusercontent.com/EcoHub-AG/Standards/refs/tags/offer-nlpi-v0.5.0/schemas/Offer-NLPI/v0.5.0/offer-nlpi-root/OfferNlpiDataType.json",
				"https://raw.githubusercontent.com/EcoHub-AG/Standards/refs/tags/offer-nlpi-v0.5.0/schemas/Offer-NLPI/v0.5.0/offer-nlpi-root/OfferNlpiFeedbackDataType.json",
				"https://raw.githubusercontent.com/EcoHub-AG/Standards/refs/tags/offer-nlpi-v0.5.0/schemas/Offer-NLPI/v0.5.0/offer-nlpi-root/OfferNlpiConclusionDecisionDataType.json"
			]
		}
	},
	"additionalProperties": false,
	"required": [
		"sender",
		"recipient",
		"standard"
	],
	"allOf": [
		{
			"if": {
				"properties": {
					"sender": {
						"required": ["broker"]
					}
				}
			},
			"then": {
				"properties": {
					"sender": {
						"properties": {
							"broker": {
								"required": ["brokerBranch"]
							}
						}
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"sender": {
						"required": ["insurer"]
					}
				}
			},
			"then": {
				"properties": {
					"sender": {
						"properties": {
							"insurer": {
								"required": ["insurerContact"]
							}
						}
					}
				}
			}
		}
	]
}