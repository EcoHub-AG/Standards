{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Customer",
  "name": "CustomerType",
  "type": "object",
  "properties": {
    "customerType": {
      "$ref": "CustomerTypeType.json"
    },
    "companyName": {
      "$ref": "CompanyNameType.json"
    },
    "companyId": {
      "$ref": "CompanyIdType.json"
    },
    "companyLegalForm": {
      "$ref": "CompanyLegalFormType.json"
    },
    "companyLegalStatus": {
      "$ref": "CompanyLegalStatusType.json"
    },
    "companyFoundingDate": {
      "description": "Founding date of the company",
      "type": "string",
      "format": "date",
      "examples": [
        "2024-08-14"
      ]
    },
    "surname": {
      "$ref": "SurNameType.json"
    },
    "firstname": {
      "$ref": "FirstNameType.json"
    },
    "birthDate": {
      "$ref": "BirthDateType.json"
    },
    "gender": {
      "$ref": "GenderType.json"
    },
    "domicilAddress": {
      "description": "Domicil Address Type",
	  "$ref": "AddressType.json"
    },
    "isDomicilAddressCorrespondenceAddress": {
      "type": "boolean"
    },
    "correspondenceAddress": {
   	  "description": "Correspondence Address Type",
      "$ref": "AddressType.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "customerType",
    "domicilAddress",
    "isDomicilAddressCorrespondenceAddress"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "isDomicilAddressCorrespondenceAddress": {
            "const": false
          }
        }
      },
      "then": {
        "required": [
          "correspondenceAddress"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "customerType": {
            "const": "private individual"
          }
        }
      },
      "then": {
        "required": [
          "surname",
          "firstname",
          "birthDate",
          "gender"
        ]
      },
      "else": {
        "required": [
          "companyName",
          "companyLegalForm",
          "companyLegalStatus"
        ]
      }
    }
  ]
}