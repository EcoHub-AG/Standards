{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Customer",
  "name": "CustomerType",
  "type": "object",
  "properties": {
    "companyName": {
      "$ref": "CompanyNameType.json"
    },
    "companyId": {
      "$ref": "CompanyIdType.json"
    },
    "companyLegalForm": {
      "$ref": "CompanyLegalFormType.json"
    },
    "companyLegalStatus": {
      "$ref": "CompanyLegalStatusType.json"
    },
    "domicilAddress": {
      "description": "Domicil Address Type",
	  "$ref": "AddressType.json"
    },
    "isDomicilAddressCorrespondenceAddress": {
      "type": "boolean"
    },
    "correspondenceAddress": {
   	  "description": "Correspondence Address Type",
      "$ref": "AddressType.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "companyName",
    "companyLegalForm",
    "localityDomicil",
    "isDomicilLocalityCorrespondenceAddress"
  ],
  "if": {
    "properties": {
      "isDomicilLocalityCorrespondenceAddress": {
        "const": false
      }
    }
  },
  "then": {
    "required": [
      "localityCorrespondence"
    ]
  }
}