{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "description": "UVG Compulsory. Federal Accident Insurance Act (UVG)",
  "properties": {
    "personGroups": {
      "$ref": "UVGZPersonGroupsType.json",
      "allOf": [
        {
          "items": {
            "required": [
              "premiumPersonGroup"
            ]
          }
        },
        {
          "items": {
            "properties": {
              "coverage": {
                "properties": {
                  "deathCapital": {
                    "deathCapitalUVG": {
                      "enum": [
                        "no",
                        "0.5-fold",
                        "1-fold",
                        "2-fold",
                        "3-fold",
                        "4-fold",
                        "5-fold",
                        "6-fold",
                        "7-fold",
                        "8-fold",
                        "9-fold"
                      ]
                    },
                    "deathCapitalSurplus": {
                      "enum": [
                        "no",
                        "0.5-fold",
                        "1-fold",
                        "2-fold",
                        "3-fold",
                        "4-fold",
                        "5-fold",
                        "6-fold",
                        "7-fold",
                        "8-fold",
                        "9-fold"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      ]
    },
    "fixedPayrolls": {
      "$ref": "UVGZFixedPayrollsType.json",
      "allOf": [
        {
          "items": {
            "required": [
              "premiumFixedPayroll"
            ]
          }
        }
      ]
    },
    "insuranceOptionsVarious": {
      "$ref": "../InsuranceOptionsVariousType.json",
      "if": {
        "surplusParticipation": {
          "const": true
        }
      },
      "then": {
        "required": [
          "surplusParticipationPremiumRate",
          "surplusParticipationRate",
          "surplusParticipationPeriodYears"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "insuranceOptionsVarious"
  ],
  "anyOf": [
    {
      "required": [
        "personGroups"
      ]
    },
    {
      "required": [
        "fixedPayrolls"
      ]
    }
  ]
}