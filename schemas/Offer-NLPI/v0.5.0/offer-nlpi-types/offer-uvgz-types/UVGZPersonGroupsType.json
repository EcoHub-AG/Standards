{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group(s) of persons",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "personGroupId": {
        "description": "ID of the person group",
        "$ref": "../../../../Generics/v0.5.0/UuidType.json"
      },
      "personGroupDescription": {
        "description": "Name of the group of persons",
        "type": "string"
      },
      "numberOfPersonsTotal": {
        "description": "Total number of employees. If unknown, 0 can also be entered.",
        "type": "integer"
      },
      "maxSalary": {
        "description": "Maximum salary in CHF",
        "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
      },
      "payrollEmployees": {
        "description": "Payroll employees",
        "$ref": "PayrollEmployeesType.json"
      },
      "coverage": {
        "description": "Coverage of the person groups",
        "$ref": "UVGZCoverageType.json",
        "allOf": [
          {
            "properties": {
              "deathCapital": {
                "properties": {
                  "deathCapitalUVGSalary": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  },
                  "deathCapitalSurplus": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  }
                }
              },
              "disabilityCapital": {
                "properties": {
                  "disabilityCapitalUVGSalary": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  },
                  "disabilityCapitalSurplusSalary": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  }
                }
              }
            }
          }
        ]
      },
      "premiumPersonGroup": {
        "description": "Must be set for offer and omitted for request.",
        "type": "object",
        "properties": {
          "medicalExpensesPremiumRate": {
            "description": "Medical expenses premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "dailyAllowanceNetPremiumRateUVGSalary": {
            "description": "Daily allowance premium rates in ‰ (UVG salary)",
            "$ref": "UVGZPremiumRateType.json"
          },
          "dailyAllowanceSurplusSalaryNetPremiumRate": {
            "description": "Daily allowance surplus salary premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "dailyHospitalAllowancePremiumRate": {
            "description": "Daily hospital premium rate in ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityCapitalPremiumRateUVGSalary": {
            "description": "Disability capital lump sum premium rates in ‰ (UVG salary)",
            "$ref": "UVGZPremiumRateType.json"
          },
          "disabilityCapitalSurplusSalaryPremiumRate": {
            "description": "Disability capital lump sum surplus salary premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "disabilityPensionPremiumRateUVGSalary": {
            "description": "Disability pension premium rate in ‰ (UVG Salary)",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityPensionSalarySurplusPremiumRate": {
            "description": "Disability pension salary surplus premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "deathCapitalPremiumRateUVGSalary": {
            "description": "Lump-sum death benefit premium rates in ‰ (UVG Salary)",
            "$ref": "UVGZPremiumRateType.json"
          },
          "deathCapitalSurplusSalaryPremiumRate": {
            "description": "Lump-sum death benefit surplus salary premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "survivorsPensionSalaryPremiumRateUVGSalary": {
            "description": "Survivors' pension premium rate in ‰ (UVG salary)",
            "type": "number",
            "multipleOf": 0.001
          },
          "survivorsPensionSalarySurplusPremiumRate": {
            "description": "Survivors' pension surplus salary premium rates in ‰",
            "$ref": "UVGZPremiumRateType.json"
          },
          "premiumDiffCoverage": {
            "description": "Premium for differential cover in CHF",
            "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
          },
          "UVGSalaryNetPremiumRate": {
            "description": "UVG salary net premium rates in %",
            "$ref": "UVGZPremiumRateType.json"
          },
          "surplusSalaryNetPremiumRate": {
            "description": "Surplus salary net premium rates in %",
            "$ref": "UVGZPremiumRateType.json"
          },
          "premiumMinimumAmount": {
            "description": "Minimum premium of the person group in CHF",
            "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
          },
          "finalPremiumPersonGroup": {
            "description": "Premium for group of persons in CHF",
            "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
          }
        },
        "required": [
          "medicalExpensesPremiumRate",
          "dailyAllowanceNetPremiumRateUVGSalary",
          "dailyAllowanceSurplusSalaryNetPremiumRate",
          "dailyHospitalAllowancePremiumRate",
          "disabilityCapitalPremiumRateUVGSalary",
          "disabilityCapitalSurplusSalaryPremiumRate",
          "disabilityPensionPremiumRateUVGSalary",
          "disabilityPensionSalarySurplusPremiumRate",
          "deathCapitalPremiumRateUVGSalary",
          "deathCapitalSurplusSalaryPremiumRate",
          "survivorsPensionSalaryPremiumRateUVGSalary",
          "survivorsPensionSalarySurplusPremiumRate",
          "premiumDiffCoverage",
          "UVGSalaryNetPremiumRate",
          "surplusSalaryNetPremiumRate",
          "premiumMinimumAmount",
          "finalPremiumPersonGroup"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "personGroupId",
      "personGroupDescription",
      "maxSalary",
      "payrollEmployees",
      "coverage"
    ],
    "additionalProperties": false
  },
  "additionalItems": false
}