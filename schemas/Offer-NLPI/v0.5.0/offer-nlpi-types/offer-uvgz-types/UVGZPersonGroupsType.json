{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group(s) of persons",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "personGroupId": {
        "description": "ID of the person group",
        "$ref": "../../../../Generics/v0.5.0/UuidType.json"
      },
      "personGroupDescription": {
        "description": "Name of the group of persons",
        "type": "string"
      },
      "numberOfPersonsTotal": {
        "description": "Total number of employees. If unknown, 0 can also be entered.",
        "type": "integer"
      },
      "maxSalary": {
        "description": "Maximum salary in CHF",
        "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
      },
      "payrollEmployees": {
        "description": "Payroll employees",
        "$ref": "PayrollEmployeesType.json"
      },
      "coverage": {
        "description": "Coverage of the person groups",
        "$ref": "UVGZCoverageType.json",
        "allOf": [
          {
            "properties": {
              "deathCapital": {
                "properties": {
                  "deathCapitalUVGSalary": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  },
                  "deathCapitalSurplus": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  }
                }
              },
              "disabilityCapital": {
                "properties": {
                  "disabilityCapitalUVG": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  },
                  "disabilityCapitalSurplusSalary": {
                    "enum": [
                      "No",
                      "0.5-fold",
                      "1-fold",
                      "2-fold",
                      "3-fold",
                      "4-fold",
                      "5-fold",
                      "6-fold",
                      "7-fold",
                      "8-fold",
                      "9-fold"
                    ]
                  }
                }
              }
            }
          },
          {
            "properties": {
              "survivorsPension": {
                "not": {
                  "required": [
                    "survivorsPartnerPension"
                  ]
                }
              }
            }
          }
        ]
      },
      "premiumPersonGroup": {
        "description": "Must be set for offer and omitted for request.",
        "type": "object",
        "properties": {
          "medicalExpensesPremiumRate": {
            "description": "Medical expenses premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "dailyAllowanceNetPremiumRate": {
            "description": "Daily allowance premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "dailyHospitalAllowancePremiumRate": {
            "description": "Daily hospital premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityCapitalPremiumRate": {
            "description": "Disability capital lump sum premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityCapitalSurplusSalaryPremiumRate": {
            "description": "Disability capital lump sum  surplus salary premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityPensionPremiumRate": {
            "description": "Disability pension premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "disabilityPensionSalarySurplusPremiumRate": {
            "description": "Disability pension salary surplus premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "deathCapitalPremiumRate": {
            "description": "Lump-sum death benefit premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "deathCapitalSurplusSalaryPremiumRate": {
            "description": "Lump-sum death benefit surplus salary premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "survivorsPensionSalaryPremiumRate": {
            "description": "Survivors' pension premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "survivorsPensionSalarySurplusPremiumRate": {
            "description": "Survivors' pension surplus salary premium rate in  ‰",
            "type": "number",
            "multipleOf": 0.001
          },
          "premiumDiffCoverage": {
            "description": "Premium for differential cover in CHF",
            "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
          },
          "finalPremiumPersonGroup": {
            "description": "Premium for group of persons in CHF",
            "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
          }
        },
        "required": [
          "medicalExpensesPremiumRate",
          "dailyAllowanceNetPremiumRate",
          "dailyHospitalAllowancePremiumRate",
          "disabilityCapitalPremiumRate",
          "disabilityCapitalSurplusSalaryPremiumRate",
          "disabilityPensionPremiumRate",
          "disabilityPensionSalarySurplusPremiumRate",
          "deathCapitalPremiumRate",
          "deathCapitalSurplusSalaryPremiumRate",
          "survivorsPensionSalaryPremiumRate",
          "survivorsPensionSalarySurplusPremiumRate",
          "premiumDiffCoverage",
          "finalPremiumPersonGroup"
        ],
        "additionalProperties": false
      }
    },
    "required": [
      "personGroupId",
      "personGroupDescription",
      "numberOfPersonsTotal",
      "maxSalary",
      "payrollEmployees",
      "coverage"
    ],
    "additionalProperties": false
  },
  "additionalItems": false
}