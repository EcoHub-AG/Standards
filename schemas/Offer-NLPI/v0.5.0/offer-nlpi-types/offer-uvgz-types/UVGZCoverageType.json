{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "UVGZ coverage",
  "type": "object",
  "properties": {
    "deathCapital": {
      "$ref": "DeathCapitalType.json"
    },
    "subsequentPaymentsAfterDeath": {
      "description": "Supplementary salary in the event of death in accordance with Art. 338 OR",
      "type": "boolean"
    },
    "disabilityCapital": {
      "$ref": "DisabilityCapitalType.json"
    },
    "integrityCapital": {
      "type": "boolean",
      "description": "Integrity capital based on UVG benefits co-insured?"
    },
    "dailyAllowance": {
      "$ref": "DailyAllowanceType.json"
    },
    "dailyHospitalAllowance": {
      "$ref": "DailyHospitalAllowanceType.json"
    },
    "medicalExpensesHospital": {
      "$ref": "MedicalExpensesHospitalType.json"
    },
    "differentialCover": {
      "description": "Differential cover (special risk)",
      "type": "boolean"
    },
    "disabilityPension": {
      "description": "Disability Pension",
      "type": "object",
      "properties": {
        "disabilityPensionSurplusSalary": {
          "description": "Disability pension on surplus salary (cumulative maximum salary of all individual pensions)",
          "type": "string",
          "enum": [
            "Analog UVG",
            "Analog OUFL"
          ]
        },
        "disabilityPensionSurplusSalaryBenefitPeriod": {
          "description": "Benefit period disability pension",
          "type": "string",
          "enum": [
            "Until reference age",
            "According to UVG"
          ]
        }
      },
      "required": [
        "disabilityPensionSurplusSalary",
        "disabilityPensionSurplusSalaryBenefitPeriod"
      ]
    },
    "survivorsPension": {
      "description": "Survivors Pension",
      "type": "object",
      "properties": {
        "pensionInsured": {
          "description": "Is this type of pension insured?",
          "type": "boolean"
        },
        "pensionPercent": {
          "description": "Pension in % of the surplus salary (cumulative maximum salary of all individual pensions)",
          "type": "integer",
          "enum": [
            70,
            80,
            90,
            100
          ]
        },
        "benefitPeriod": {
          "description": "Benefit period pension",
          "type": "string",
          "enum": [
            "bis AHV-Alter",
            "gem√§ss UVG"
          ]
        },
        "survivorsPartnerPension": {
          "type": "boolean"
        }
      },
      "required": [
        "pensionInsured"
      ],
      "if": {
        "properties": {
          "pensionInsured": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "pensionPercent",
          "benefitPeriod"
        ]
      }
    }
  },
  "additionalProperties": false
}