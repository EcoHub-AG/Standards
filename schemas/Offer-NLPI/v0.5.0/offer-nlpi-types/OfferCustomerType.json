{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Customer",
  "type": "object",
  "properties": {
    "customer": {
      "description": "Core information of the customer",
      "$ref": "../../../Generics/v0.5.0/CompanyCustomerType.json"
    },
    "GAVCompliance": {
      "description": "Guaranteed compliance with the GAV-conformity",
      "$ref": "../../../Generics/v0.5.0/TristateType.json"
    },
    "GAVName": {
      "description": "GAV-Designation",
      "type": "array",
      "minItems": 1,
      "items": {
        "description": "GAV-Designation(s)",
        "type": "string"
      }
    },
    "UVGRiskNo": {
      "description": "UVG risk number of the insured risk",
      "type": "string",
      "maxLength": 7,
      "pattern": "[0-9]{4}\\.[0-9]{2}"
    },
    "NOGACodeMain": {
      "description": "Main NOGA-Code",
      "$ref": "NogaCodeType.json"
    },
    "NOGACodeAdditional": {
      "description": "Additional NOGA-Code activities",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "NogaCodeType.json"
      }
    },
    "typeOfActivity": {
      "description": "Type of activity of the company",
      "$ref": "../../../Generics/v0.5.0/RestrictedStringType.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "customer",
    "NOGACodeMain"
  ],
  "if": {
    "properties": {
      "GAVcompliance": {
        "const": "Yes"
      }
    }
  },
  "then": {
    "required": [
      "GAVName"
    ]
  }
}