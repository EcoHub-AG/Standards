{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Person mentioned by name",
  "type": "object",
  "properties": {
    "personId": {
      "description": "ID of the insured Person",
      "type": "string",
      "format": "uuid",
      "examples": [
        "345aa049-7693-4710-89d7-e13b87ab988a"
      ]
    },
    "role": {
      "description": "Role of the insured person",
      "$ref": "../BusinessRelationPersonType.json"
    },
    "firstname": {
      "$ref": "../../../../Generics/v0.5.0/FirstNameType.json"
    },
    "surname": {
      "$ref": "../../../../Generics/v0.5.0/SurNameType.json"
    },
    "birthDate": {
      "$ref": "../../../../Generics/v0.5.0/BirthDateType.json"
    },
    "gender": {
      "$ref": "../../../../Generics/v0.5.0/GenderType.json"
    },
    "payroll": {
      "description": "Fixed payroll UVG amount in CHF",
      "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
    },
    "degreeOfEmployment": {
      "description": "Degree of employment in %.",
      "type": "number"
    },
    "insuranceType": {
      "type": "string",
      "enum": [
        "Coverage according to compulsory accident insurance UVG",
        "Coverage according to compulsory accident insurance OUFL",
        "Coverage according to voluntary accident insurance UVG",
        "Coverage according to voluntary accident insurance OUFL"
      ]
    },
    "premiumInsuredPerson": {
      "type": "object",
      "properties": {
        "hazardClass": {
          "description": "Hazard class insured person",
          "type": "string"
        },
        "hazardSubClass": {
          "description": "Hazard sub class insured person",
          "type": "string"
        },
        "finalPremiumRate": {
          "description": "Final premium rate insured person in â€°. Corresponds to the final premium rate / gross premium rate",
          "type": "number",
          "multipleOf": 0.001
        },
        "totalPremium": {
          "description": "Annual premium of the insured person",
          "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
        }
      },
      "additionalProperties": false,
      "required": [
        "finalPremiumRate",
        "totalPremium"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "personId",
    "role",
    "gender",
    "surname",
    "firstname",
    "birthDate",
    "payroll",
    "insuranceType"
  ]
}