{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group of compulsory insured people",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "personGroupId": {
        "description": "ID of the person group",
        "$ref": "../../../../Generics/v0.5.0/UuidType.json"
      },
      "personGroupDescription": {
        "description": "Name of the group of persons",
        "type": "string"
      },
      "numberOfPersonsOA": {
        "description": "Number of employees OA. If unknown, value 0 can be specified.",
        "type": "integer"
      },
      "numberOfPersonsNOA": {
        "description": "Number of employees NOA. If unknown, value 0 can be specified.",
        "type": "integer"
      },
      "payrollEmployeesOA": {
        "description": "Accident insurance total payroll of all employees OA",
        "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
      },
      "payrollEmployeesNOA": {
        "description": "Accident insurance total payroll of all employees NOA",
        "$ref": "../../../../Generics/v0.5.0/MonetaryAmountType.json"
      },
      "coverage": {
        "description": "Coverage of the person groups UVG Compulsory Federal Accident Insurance Act (UVG)",
        "$ref": "UVGOCoverageType.json"
      },
      "premiumPersonGroup": {
        "description": "Premium of the insured group of persons",
        "type": "object",
        "properties": {
          "premiumNBU": {
            "description": "Premium for NBU",
            "$ref": "UVGOPersonGroupPremiumType.json"
          },
          "premiumBU": {
            "description": "Premium for BU",
            "$ref": "UVGOPersonGroupPremiumType.json"
          }
        },
        "additionalProperties": false,
        "required": [
          "premiumNBU",
          "premiumBU"
        ]
      }
    },
    "additionalProperties": false,
    "required": [
      "personGroupId",
      "personGroupDescription",
      "numberOfPersonsOA",
      "numberOfPersonsNOA",
      "payrollEmployeesOA",
      "payrollEmployeesNOA",
      "coverage"
    ]
  }
}