{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "description": "UVG Compulsory. Federal Accident Insurance Act (UVG)",
  "properties": {
    "personGroup": {
      "$ref": "UVGOPersonGroupType.json",
      "allOf": [
        {
          "items": {
            "required": [
              "premiumPersonGroup"
            ]
          }
        }
      ]
    },
    "voluntarilyInsuredPersons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "UVGOFixedPayrollsType.json",
        "allOf": [
          {
            "items": {
              "required": [
                "premiumInsuredPerson"
              ]
            }
          },
          {
            "properties": {
              "role": {
                "enum": [
                  "self-employed person",
                  "contributing family member"
                ]
              }
            }
          }
        ]
      }
    },
    "personsConnectionEmployer": {
      "type": "array",
      "description": "Persons with special connection to the employer. Professional and customary wage. Are staff members insured in accordance with Art. 22 para. 2 lit. c UVV whose effective AHV salary does not correspond at least to the salary customary for the profession and location?",
      "minItems": 1,
      "items": {
        "$ref": "UVGOFixedPayrollsType.json",
        "allOf": [
          {
            "required": [
              "premiumInsuredPerson"
            ]
          },
          {
            "properties": {
              "role": {
                "enum": [
                  "contributing family member",
                  "partner",
                  "shareholder",
                  "cooperative member"
                ]
              }
            }
          }
        ]
      }
    },
    "insuranceOptionsVarious": {
      "$ref": "UVGOInsuranceOptionsVariousType.json"
    }
  },
  "additionalProperties": false
}