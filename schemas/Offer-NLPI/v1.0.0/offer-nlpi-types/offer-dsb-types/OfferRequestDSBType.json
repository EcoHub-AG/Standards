{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "description": "Daily sickness benefits",
  "properties": {
    "riskCharacteristic": {
      "$ref": "../RiskCharacteristicType.json"
    },
    "averageAgeMale": {
      "description": "Average age of males, only required if the total number of persons is less than 4.",
      "type": "number",
      "multipleOf": 0.01
    },
    "averageAgeFemale": {
      "description": "Average age of females, only required if the total number of persons is less than 4.",
      "type": "number",
      "multipleOf": 0.01
    },
    "personGroups": {
      "$ref": "DSBPersonGroupsType.json",
      "allOf": [
        {
          "items": {
            "not": {
              "required": [
                "premiumPersonGroup"
              ]
            },
            "required": [
              "numberOfPersonsFemale",
              "numberOfPersonsMale",
              "numberOfPersonsTotal"
            ]
          }
        }
      ]
    },
    "personMentionedByName": {
      "$ref": "DSBPersonType.json",
      "allOf": [
        {
          "items": {
            "not": {
              "required": [
                "premiumPersonMentionedByName"
              ]
            }
          }
        }
      ]
    },
    "insuranceOptions": {
      "$ref": "DSBInsuranceOptionsType.json",
      "allOf": [
        {
          "properties": {
            "insuranceOptionsVarious": {
              "not": {
                "required": [
                  "surplusParticipationPremiumRate",
                  "surplusParticipationRate",
                  "surplusParticipationPeriodYears"
                ]
              }
            }
          }
        }
      ]
    },
    "previousInsurer": {
      "description": "Previous insurer",
      "$ref": "../../offer-nlpi-types/PreviousInsurerType.json"
    }
  },
  "required": [
    "previousInsurer",
    "riskCharacteristic"
  ],
  "anyOf": [
    {
      "required": [
        "personGroups"
      ]
    },
    {
      "required": [
        "personMentionedByName"
      ]
    }
  ],
  "additionalProperties": false,
  "unevaluatedProperties": false
}