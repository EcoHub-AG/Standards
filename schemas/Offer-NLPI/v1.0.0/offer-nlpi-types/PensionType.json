{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "pensionInsured": {
      "description": "Is this type of pension insured?",
      "type": "boolean"
    },
    "pensionPercent": {
      "description": "Pension in % of the surplus salary (cumulative maximum salary of all individual pensions)",
      "type": "integer",
      "enum": [
        70,
        80,
        90,
        100
      ]
    },
    "benefitPeriod": {
      "description": "Benefit period pension",
      "type": "string",
      "enum": [
        "bis AHV-Alter",
        "gem√§ss UVG"
      ]
    }
  },
  "required": [
    "pensionInsured"
  ],
  "if": {
    "properties": {
      "pensionInsured": {
        "const": true
      }
    }
  },
  "then": {
    "required": [
      "pensionPercent",
      "benefitPeriod"
    ]
  }
}