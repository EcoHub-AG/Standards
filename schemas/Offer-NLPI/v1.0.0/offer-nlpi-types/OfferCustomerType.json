{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"description": "Customer",
	"type": "object",
	"properties": {
		"companyName": {
			"$ref": "../../../Generics/v1.0.0/CompanyNameType.json"
		},
		"companyId": {
			"$ref": "../../../Generics/v1.0.0/CompanyIdType.json"
		},
		"companyLegalForm": {
			"$ref": "../../../Generics/v1.0.0/CompanyLegalFormType.json"
		},
		"companyLegalStatus": {
			"$ref": "../../../Generics/v1.0.0/CompanyLegalStatusType.json"
		},
		"localityDomicil": {
			"description": "Domicil Address Type",
			"$ref": "../../../Generics/v1.0.0/LocalityDomicilType.json"
		},
		"isDomicilLocalityCorrespondenceAddress": {
			"type": "boolean"
		},
		"localityCorrespondence": {
			"description": "Correspondence Address Type",
			"$ref": "../../../Generics/v1.0.0/LocalityCorrespondenceType.json"
		},
		"GAVcompliance": {
			"description": "Guaranteed compliance with the GAV-conformity",
			"$ref": "../../../Generics/v1.0.0/TristateType.json"
		},
		"GAVname": {
			"description": "GAV-Designation",
			"type": "array",
			"minItems": 1,
			"items": {
				"description": "GAV-Designation(s)",
				"type": "string"
			}
		},
		"NOGACodeMain": {
			"description": "Main NOGA-Code",
			"$ref": "NogaCodeType.json"
		},
		"NOGACodeAdditional": {
			"description": "Additional NOGA-Code activities",
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "NogaCodeType.json"
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"companyName",
		"companyLegalForm",
		"localityDomicil",
		"isDomicilLocalityCorrespondenceAddress",
		"GAVcompliance"
	],
	"allOf": [
		{
			"if": {
				"properties": {
					"isDomicilLocalityCorrespondenceAddress": {
						"const": false
					}
				}
			},
			"then": {
				"required": [
					"localityCorrespondence"
				]
			}
		},
		{
			"if": {
				"properties": {
					"GAVcompliance": {
						"const": "Yes"
					}
				}
			},
			"then": {
				"required": [
					"GAVname"
				]
			}
		}
	]
}