{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Person mentioned by name",
  "type": "object",
  "properties": {
    "personId": {
      "description": "ID of the insured Person. IDs are generated by the broker in the offer request and must be reported back by the insurer in the offer. The insurer may add new insured persons, in which case a new ID must be generated and reported back to the broker.",
      "type": "string",
      "format": "uuid",
      "examples": [
        "345aa049-7693-4710-89d7-e13b87ab988a"
      ]
    },
    "role": {
      "description": "Role of the insured person",
      "$ref": "../BusinessRelationPersonType.json"
    },
    "firstname": {
      "$ref": "../../../../Generics/v0.6.0/FirstNameType.json"
    },
    "surname": {
      "$ref": "../../../../Generics/v0.6.0/SurNameType.json"
    },
    "birthDate": {
      "$ref": "../../../../Generics/v0.6.0/BirthDateType.json"
    },
    "gender": {
      "$ref": "../../../../Generics/v0.6.0/GenderType.json"
    },
    "payroll": {
      "description": "Fixed payroll UVG amount in CHF",
      "$ref": "../../../../Generics/v0.6.0/MonetaryAmountType.json"
    },
    "degreeOfEmployment": {
      "description": "Degree of employment in %.",
      "type": "number"
    },
    "insuranceType": {
      "description": "Insurance type UVG",
      "type": "string",
      "enum": [
        "Coverage according to compulsory accident insurance UVG",
        "Coverage according to compulsory accident insurance OUFL",
        "Coverage according to voluntary accident insurance UVG",
        "Coverage according to voluntary accident insurance OUFL"
      ]
    },
    "premiumPersonMentionedByName": {
      "type": "object",
      "description": "Only set for offer. Must be omitted in offer request.",
      "properties": {
        "premiumOA": {
          "description": "Premium for OA occupational accidents",
          "$ref": "UVGOPersonPremiumType.json"
        },
        "premiumNOA": {
          "description": "Premium for NOA non-occupational accidents",
          "$ref": "UVGOPersonPremiumType.json"
        }
      },
      "additionalProperties": false,
      "required": [
        "premiumOA",
        "premiumNOA"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "personId",
    "role",
    "gender",
    "surname",
    "firstname",
    "birthDate",
    "payroll",
    "insuranceType"
  ]
}