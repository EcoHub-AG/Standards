{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "description": "UVG Compulsory. Federal Accident Insurance Act (UVG)",
  "properties": {
    "personGroup": {
      "$ref": "UVGOPersonGroupType.json",
      "allOf": [
        {
          "items": {
            "required": [
              "premiumPersonGroup"
            ]
          }
        }
      ]
    },
    "voluntarilyInsuredPersons": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$ref": "UVGOFixedPayrollsType.json",
        "allOf": [
          {
            "items": {
              "required": [
                "premiumInsuredPerson"
              ]
            }
          }
        ],
        "if": true,
        "then": {
          "properties": {
            "role": {
              "enum": [
                "BusinessOwner",
                "FamilyMembers"
              ]
            }
          }
        }
      }
    },
    "personsConnectionEmployer": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "UVGOFixedPayrollsType.json",
        "allOf": [
          {
            "required": [
              "premiumInsuredPerson"
            ]
          }
        ],
        "if": true,
        "then": {
          "properties": {
            "role": {
              "enum": [
                "BusinessPartner",
                "Shareholder",
                "CooperativeMember",
                "FamilyMembers"
              ]
            }
          }
        }
      }
    },
    "insuranceOptionsVarious": {
      "$ref": "UVGOInsuranceOptionsVariousType.json"
    }
  },
  "additionalProperties": false
}