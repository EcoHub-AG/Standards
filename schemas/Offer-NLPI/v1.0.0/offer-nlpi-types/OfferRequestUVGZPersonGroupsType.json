{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group(s) of persons",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "personGroupId": {
        "$ref": "../../../Generics/v1.0.0/PersonGroupIdType.json"
      },
      "numberOfPersonsTotal": {
        "description": "Total number of employees",
        "type": "integer"
      },
      "payrollTotal": {
        "description": "Total payroll of all employees",
        "type": "number",
        "multipleOf": 0.01
      },
      "maximumPayrollAmount": {
        "$ref": "../../../Generics/v1.0.0/MaximumPayrollAmountType.json"
      },
      "surplusSalaryTotal": {
        "description": "Payroll: Surplus salary total in CHF",
        "type": "number",
        "multipleOf": 0.01
      },
      "coverage": {
        "description": "Coverage of the person groups",
        "$ref": "UVGZCoverageType.json"
      }
    },
    "additionalProperties": false,
    "required": [
      "personGroupId",
      "numberOfPersonsTotal",
      "payrollTotal",
      "maximumPayrollAmount",
      "surplusSalaryTotal",
      "coverage"
    ]
  },
  "unevaluatedItems": false
}