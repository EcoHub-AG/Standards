{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "insurerType": {
      "description": "Insurer covering UVG compulsory",
      "type": "string",
      "enum": [
        "SUVA",
        "private insurer",
        "none"
      ]
    },
    "insurerName": {
      "description": "UVG Insurer",
      "type": "string"
    },
    "premiumBU": {
      "description": "Final premium rate BU and NBU mandatory",
      "type": "number",
      "multipleOf": 0.01
    },
    "premiumNBU": {
      "description": "Final premium rate BU and NBU mandatory",
      "type": "number",
      "multipleOf": 0.01
    },
    "required": [
      "insurerType"
    ],
    "allOf": [
      {
        "if": {
          "properties": {
            "insurerType": {
              "const": "SUVA"
            }
          }
        },
        "then": {
          "required": [
            "premiumBU",
            "premiumNBU"
          ]
        }
      },
      {
        "if": {
          "properties": {
            "insurerType": {
              "const": "private insurer"
            }
          }
        },
        "then": {
          "required": [
            "insurerName",
            "premiumBU",
            "premiumNBU"
          ]
        }
      }
    ]
  }
}